{
	name = "iCalendar";
	fileTypes = ( ics, ifb );

	foldingStartMarker = "^BEGIN:";
	foldingStopMarker = "^END:";
	smartTypingPairs = (
	    ( "(", ")" ), ( "[", "]" ), ( "{", "}" ),
	    ( "\"", "\"" ), ( "'", "'" )
	);
	highlightPairs = (
	    ( "(", ")" ), ( "[", "]" ), ( "{", "}" )
	);

	foregroundColor = "#DBFEF8";
	backgroundColor = "#2F4F4F";

	patterns = (
		{ name = "Begin Component"; match = "^BEGIN:(.*)"; foregroundColor = "#00CCFF"; "fontStyle[1]" = ( italic );},
		{ name = "End Component"; match = "^END:(.*)"; foregroundColor = "#00CCFF"; "fontStyle[1]" = ( italic );},
		{ name = "Numeric Constant"; match = "\\<((0(x|X)[0-9a-fA-F]*)|(([0-9]+\\.?[0-9]*)|(\\.[0-9]+))((e|E)(\\+|-)?[0-9]+)?)(L|l|UL|ul|u|U|F|f)?\\>"; foregroundColor = "#F0F8FF"; },
		/* { name = "Single String"; begin = "'"; end = "'"; swallow = "\\\\."; foregroundColor = "#FFFCCF"; }, */
		{ name = "Double Quoted String"; begin = "\""; end = "\"";  foregroundColor = "#FFFCCF";   },
	);
}

